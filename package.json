    "socket.io-client": "^4.1.2",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "bcryptjs": "^2.4.3",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.9",
    "multer": "^1.4.2",
    "pino": "^6.11.3",
    "pino-http": "^5.5.0",
    "ramda": "^0.27.1",
    "sharp": "^0.28.3",
    "socket.io": "^4.1.2"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "react-scripts start",
    "server": "env-cmd -f .env.development nodemon --watch src/server src/server",
    "build": "react-scripts build",
    "production": "env-cmd -f .env.production node src/server",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "seed:db": "env-cmd -f .env.development node scripts/seedDb",
    "create:admin": "env-cmd -f .env.development node scripts/createAdmin",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,md,html,json,css}": "prettier --write",
    "*.js": "eslint"
  },
  "prettier": {
    "singleQuote": true
  }
}
