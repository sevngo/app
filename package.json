    "@material-ui/icons": "^4.11.2",
    "@testing-library/react": "^11.2.7",
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "coveralls": "^3.1.0",
    "faker": "^5.5.3",
    "http-proxy-middleware": "^1.3.1",
    "lint-staged": "^11.0.0",
    "moment": "^2.29.1",
    "nock": "^13.1.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^5.0.2",
    "prettier": "^2.3.1",
    "react": "^17.0.2",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.9.0",
    "react-intl": "^5.20.3",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
