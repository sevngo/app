  "scripts": {
    "start": "NODE_ENV=production node src/server",
    "dev": "NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "server": "NODE_ENV=development nodemon --watch src/server src/server | pino-tiny",
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "seed:db": "NODE_ENV=development node scripts/seedDb",
    "create:admin": "NODE_ENV=development node scripts/createAdmin",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
